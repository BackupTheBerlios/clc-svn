# Maintainer: Per Lidén <per@fukt.bth.se>

name=pkgutils
version=5.19
release=1
source=(http://www.fukt.bth.se/~per/pkgutils/$name-$version.tar.gz
        pkgmk.conf)

build () {
    cd $name-$version
    make DESTDIR=$PKG install
    cp $SRC/pkgmk.conf $PKG/etc
}
