# $Id: Pkgfile,v 1.8 2005/04/12 21:15:36 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=m4
version=1.4.3
release=1
source=(http://mirrors.sunsite.dk/gnu/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr
    make
    make prefix=$PKG/usr install
    rm -rf $PKG/usr/info
}
