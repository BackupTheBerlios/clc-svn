# $Id: Pkgfile,v 1.14 2005/03/21 21:24:23 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=libtool
version=1.5.14
release=1
source=(http://mirrors.sunsite.dk/gnu/$name/$name-$version.tar.gz \
	libtool.1 libtoolize.1)

build() {
    cd $name-$version
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
    rm -fr $PKG/usr/info 
    mkdir -p $PKG/usr/man/man1
    cp ../libtool.1 ../libtoolize.1 $PKG/usr/man/man1
}
