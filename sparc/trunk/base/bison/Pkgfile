# $Id: Pkgfile,v 1.11 2005/02/06 01:48:02 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=bison
version=2.0
release=1
source=(http://mirrors.sunsite.dk/gnu/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
		--disable-nls
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/info
}
