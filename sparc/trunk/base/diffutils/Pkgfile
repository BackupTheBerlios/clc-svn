# $Id: Pkgfile,v 1.7 2004/04/11 17:31:43 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=diffutils
version=2.8.1
release=1
source=(http://mirrors.sunsite.dk/gnu/$name/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr --disable-nls
    make
    make prefix=$PKG/usr install
    rm -rf $PKG/usr/info
}
