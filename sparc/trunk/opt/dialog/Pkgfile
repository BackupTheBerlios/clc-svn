name=dialog
version=1.0-20050306
release=1
source=(ftp://dickey.his.com/dialog/$name-$version.tgz)

build () {
    cd $name-$version
    ./configure --prefix=/usr --with-ncurses
    make
    make DESTDIR=$PKG install
}
