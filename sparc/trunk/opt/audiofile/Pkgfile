# $Id: Pkgfile,v 1.7 2004/03/07 19:36:18 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=audiofile
version=0.2.6
release=1
source=(http://www.68k.org/~michael/audiofile/$name-$version.tar.gz)

build () {
    cd $name-$version
    ./configure --prefix=/usr
    make
    make DESTDIR=$PKG install
}
