# $Id: Pkgfile,v 1.7 2003/03/17 21:28:46 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=dhcpcd
version=1.3.22-pl4
release=2
source=(ftp://ftp.phystech.com/pub/$name-$version.tar.gz \
	$name-$version.patch)

build () {
    cd $name-$version
    patch -p1 < ../$name-$version.patch
    ./configure --prefix=/
    make
    make DESTDIR=$PKG install
}
