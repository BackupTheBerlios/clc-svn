name=iptables
version=1.3.1
release=1
source=(http://netfilter.samba.org/files/$name-$version.tar.bz2)

build () {
    cd $name-$version
    make KERNEL_DIR=/usr PREFIX=/usr
    make KERNEL_DIR=/usr PREFIX=/usr DESTDIR=$PKG install
}
