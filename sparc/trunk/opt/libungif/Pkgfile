# $Id: Pkgfile,v 1.2 2002/12/06 22:23:10 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=libungif
version=4.1.0
release=1
source=(http://ibiblio.org/pub/Linux/libs/graphics/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr
    make
    make prefix=$PKG/usr install
    rm -rf $PKG/usr/bin
}
