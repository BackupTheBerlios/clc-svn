# $Id: Pkgfile,v 1.5 2005/01/03 20:44:22 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=fontconfig
version=2.2.3
release=1
source=(http://freedesktop.org/fontconfig/release/$name-$version.tar.gz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
		--sysconfdir=/etc
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/share
}
