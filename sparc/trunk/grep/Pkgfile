# $Id: Pkgfile,v 1.11 2004/11/22 21:38:48 per Exp $
# Maintainer: Per Lidén <per@fukt.bth.se>

name=grep
version=2.5.1a
release=1
source=(http://mirrors.sunsite.dk/gnu/$name/$name-$version.tar.bz2)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
		--disable-perl-regexp \
		--disable-nls
    make
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/info
}
