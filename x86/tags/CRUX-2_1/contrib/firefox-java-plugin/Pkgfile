# $Id: Pkgfile,v 1.3 2005/04/12 22:21:04 sip Exp $
# Description: java plugin for Firefox
# URL: http://www.blackdown.org http://java.sun.com
# Maintainer: Simone Rota, sip at varlock dot com
# Packager: Simone Rota, sip at varlock dot com
# Depends on: j2re, firefox

name=firefox-java-plugin
version=1.4.2
release=1
source=()

build() {
	mkdir -p $PKG/usr/lib/firefox/plugins
	ln -sf .footprint.j2re $PKGMK_ROOT/.footprint

	if [ "`pkginfo -i | grep '^j2re'`" ]; then
	  ln -s /usr/lib/java/plugin/i386/mozilla/javaplugin_oji.so \
	  $PKG/usr/lib/firefox/plugins/    	
	else
	  if [ "`pkginfo -i | grep '^j2sdk'`" ]; then
	    ln -sf .footprint.j2sdk $PKGMK_ROOT/.footprint
	    ln -s /usr/lib/java/jre/plugin/i386/ns7/libjavaplugin_oji.so \
	    $PKG/usr/lib/firefox/plugins
	  fi
	fi

}
