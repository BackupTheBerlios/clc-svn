# $Id: Pkgfile,v 1.6 2005/04/04 17:09:43 sip Exp $
# Description: HTML/XHTML photo album and gallery generator
# URL: http://marginalhacks.com/Hacks/album/
# Maintainer: Simone Rota, sip at varlock dot com
# Packager: Simone Rota, sip at varlock dot com
# Depends on: perl, imagemagick

name=album
version=3.07
release=2
source=(http://marginalhacks.com/bin/$name.tar.gz \
	http://marginalhacks.com/bin/${name}_themes.tar.gz)

build() {
	mkdir -p $PKG/usr/{bin,man/man1,share/album}
	cd $name-$version
        install -m 755 $name $PKG/usr/bin
	install -m 644 $name.1 $PKG/usr/man/man1
	mkdir -p $PKG/usr/share/album
	cp -r ../Themes $PKG/usr/share/album/themes
}
