# $Id: Pkgfile,v 1.1 2005/05/23 11:46:45 vector Exp $
# Description: Perl hotplug implementation with a focus on boot speed
# URL: http://opensource.idealcorp.com/hotplug-perl/
# Maintainer: Jukka Heino, jukka at karsikkopuu dot net
# Packager: Jukka Heino, jukka at karsikkopuu dot net
# Depends on: 

name=hotplug-perl
version=1.0
release=1
source=(http://opensource.idealcorp.com/$name/${name}_$version-1.tar.gz \
        $name.rc)

build() {
    cd $name-$version
    mkdir -p $PKG/{sbin,usr/share/man/man3}
    make DESTDIR=$PKG install
    rm -rf $PKG/usr/share/doc
    install -D -m 0755 $SRC/$name.rc $PKG/etc/rc.d/$name
}
